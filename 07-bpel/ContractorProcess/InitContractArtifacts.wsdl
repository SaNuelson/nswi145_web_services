<?xml version="1.0"?>
<definitions name="FreelancerAccessPoint"
	targetNamespace="http://contractor/"
	xmlns:tns="http://contractor/"
	xmlns:plnk="http://docs.oasis-open.org/wsbpel/2.0/plnktype"
	xmlns="http://schemas.xmlsoap.org/wsdl/"
	xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
	xmlns:p="http://www.w3.org/2001/XMLSchema"
	xmlns:app="http://webinterface/">


	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
     SERVICE DEFINITION - A service groups a set of ports into
     a service unit.
     ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<import namespace="http://webinterface/" location="freelancers.wsdl"></import>
	<import namespace="http://webinterface/" location="contracts.wsdl"></import>
	<types>
		<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" targetNamespace="http://contractor/">
			<xsd:complexType name="contractDetailsPart">
				<xsd:sequence>
					<xsd:element name="title" type="xsd:string" minOccurs="1"
						maxOccurs="1"></xsd:element>
					<xsd:element name="description" type="xsd:string"
						minOccurs="0" maxOccurs="1"></xsd:element>
					<xsd:element name="customerId" type="xsd:int" minOccurs="1"
						maxOccurs="1"></xsd:element>
					<xsd:element name="jobType" type="xsd:string" minOccurs="1" maxOccurs="1"></xsd:element>
				</xsd:sequence>
			</xsd:complexType>
			<xsd:simpleType name="contractSuccessType">
				<xsd:restriction base="xsd:boolean"></xsd:restriction>
			</xsd:simpleType>

			<xsd:simpleType name="freelancerIdType">
				<xsd:restriction base="xsd:int"></xsd:restriction>
			</xsd:simpleType>

			<xsd:simpleType name="freelancerRateType">
				<xsd:restriction base="xsd:int"></xsd:restriction>
			</xsd:simpleType>
		</xsd:schema>
	</types>
	<message name="ContractInfoMessage">
		<part name="NewPart" type="app:ContractInfoType"></part>
	</message>
	<message name="ContractInitSuccessMessage">
		<part name="ContractDetails" type="app:ContractDetailsPart"></part>
	</message>
	<portType name="InitiateContractPortType">
		<operation name="InitContractOperation">
			<input message="app:ContractInfoMessage" name="ContractInfoInput"></input>
			<output message="app:ContractInitSuccessMessage" name="SuccessOutput"></output>
		</operation>
	</portType>
	<portType name="FreelancerCallbackPortType">
		<operation name="GetFlcInfoCallback">
			<input message="app:getFreelancerDetailsResponse" name="FreelancerInfoInput"></input>
		</operation>
	</portType>
	<portType name="ContractCallbackPortType">
		<operation name="AssignContractCallback">
			<input message="app:submitContractResponse" name="ContractSubmitSuccessInput"></input>
		</operation>
	</portType>
	<binding name="InitiateContractSOAPBinding"
		type="app:InitiateContractPortType">
		<soap:binding style="document"
			transport="http://schemas.xmlsoap.org/soap/http" />
		<operation name="InitContractOperation">
			<soap:operation soapAction="http://contractor/initiateContract" />
			<input name="ContractInfoInput">
				<soap:body use="literal" />
			</input>
			<output name="SuccessOutput">
				<soap:body use="literal" />
			</output>
		</operation>
	</binding>
	<service name="InitContractService">
		<port name="IncomingContractInfoPort" binding="tns:InitiateContractSOAPBinding">
			<soap:address
				location="http://localhost:8080/ode/processes/InitContract" />
		</port>
	</service>
	<plnk:partnerLinkType name="ContractInitLinkType">
		<plnk:role
			name="InitExecutorRole"
			portType="tns:InitiateContractPortType" />
	</plnk:partnerLinkType>
	<plnk:partnerLinkType name="FreelancerAccessPointLinkType">
		<plnk:role
			name="InfoRequisitorRole"
			portType="tns:FreelancerCallbackPortType" />
		<plnk:role
			name="InfoProviderRole"
			portType="app:FreelancerAccessPoint" />
	</plnk:partnerLinkType>
	<plnk:partnerLinkType name="ContractAccessPointLinkType">
		<plnk:role
			name="InfoRequisitorRole"
			portType="tns:ContractCallbackPortType" />
		<plnk:role
			name="InfoProviderRole"
			portType="app:ContractAccessPoint" />
	</plnk:partnerLinkType>
</definitions>